<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/default_elevation"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    android:backgroundTint="@color/colorPrimary"
    android:layout_marginEnd="@dimen/form_half_padding">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_half_padding"
        android:layout_marginStart="@dimen/form_padding"
        android:layout_marginEnd="@dimen/form_padding"
        android:layout_marginBottom="@dimen/form_half_padding"/>

</com.google.android.material.card.MaterialCardView>